class Http {
    path: String
    method: "get"|"post"|"put"|"delete"
    cors: Boolean|Null
}

class Event {
    http: Http
}

class Function {
    handler: String
    events: Listing<Event>
}

hello: Function = new {
    handler = "handler.hello"
    events = new Listing{
        new Event{
            http = new Http{
                path = "sample/test"
                method = "get"
                cors = null
            }
        }
    }
}

